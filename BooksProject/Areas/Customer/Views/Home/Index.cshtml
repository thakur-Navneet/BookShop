<div class="container-fluid py-5" style="background-color: #f2ede3;">
    <div class="container text-center">
        <h2 class="section-title">Our Featured Products</h2>
        <p class="mb-5">Explore our exclusive collection of products. Get them while they last!</p>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <a asp-area="Customer" asp-controller="Shop" asp-action="Index" style="text-decoration: none;">
                        <div class="card border-0 shadow-lg rounded-3 product-card position-relative">
                            <div class="category-label">
                                @product.Category.Name
                            </div>
                            <div id="productsliderinner" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3500">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="@product.ImageFeatured" class="d-block w-100 product-image" style="height: 350px; object-fit: cover;" alt="@product.Title" />
                                    </div>
                                    <div class="carousel-item">
                                        <img src="@product.ImageFirst" class="d-block w-100 product-image" style="height: 350px; object-fit: cover;" alt="@product.Title" />
                                    </div>
                                    <div class="carousel-item">
                                        <img src="@product.ImageSecond" class="d-block w-100 product-image" style="height: 350px; object-fit: cover;" alt="@product.Title" />
                                    </div>
                                </div>
                            </div>
                            <div class="card-body text-center p-4">
                                <h5 class="card-title text-dark mb-3 font-weight-bold" style="min-height: 70px;">@product.Title</h5>
                                <p class="card-text text-muted mb-3">by @product.Author.Title</p>
                                <p class="price">
                                    <span class="text-dark">Price:</span> &nbsp;
                                    <span class="text-muted"><strike>$@product.ListPrice.ToString("0.00")</strike></span> &nbsp;
                                    <span class="text-danger font-weight-bold h5"> $@product.Price100.ToString("0.00")</span>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        <div class="text-center">
            <a class="btn btn-lg btn-custom" asp-area="Customer" asp-controller="Shop" asp-action="Index">View More Books</a>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container">
        <h2 class="text-center section-title">Our Featured Blogs</h2>
        <p class="text-center mb-5">Latest articles and insights</p>
        @foreach (var blog in Model.Blogs)
        {
            <div class="row mb-5">
                <div class="col-lg-5">
                    <img src="@blog.BlogImage" class="card-img-top" style="height: 270px; object-fit: cover;" alt="@blog.Title" />
                </div>
                <div class="col-lg-7 border-bottom">
                    <h5 class="card-title">@blog.Title</h5>
                    <p class="card-text">
                        @(blog.Description.Length > 99 ? blog.Description.Substring(0, 99) + "..." : blog.Description)
                    </p>
                    <p class="card-text text-muted">
                        <small>@blog.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                    </p>
                    <a class="btn btn-sm btn-custom" asp-area="Admin" asp-controller="Blog" asp-action="Blogs">Read More</a>
                </div>
            </div>
        }
    </div>
</div>
<div class="container-fluid py-5" style="background-color: #f2ede3; margin-bottom: -20px;">
