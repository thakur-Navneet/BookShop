@using System.Linq
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
    var randomProducts = Model.OrderBy(x => Guid.NewGuid()).Take(3).ToList();
}
<div class="container-fluid py-5" style="background-color: #f2ede3;">
    <div id="topslider1" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <h3 class="display-4 pt-5 mt-5">Dive into the <span style="color: #e94115; font-weight:600">Pulse </span><br /> of Modern Culture </h3>
                            <p class="text-secondary">Lorem Impsu  dolr sir amet</p>
                        </div>
                        <div class="col-lg-6">
                            <img src="/Images/imageC2.png" class="w-100" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <h3 class="display-4 pt-5 mt-5">Our <span style="color: #e94115; font-weight:600">Sci Fi</span> & Fantasy Picks </h3>
                            <p class="text-secondary">Lorem Impsu  dolr sir amet</p>
                        </div>
                        <div class="col-lg-6">
                            <img src="/Images/imageC1.png" class="w-100" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-target="#topslider1" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-target="#topslider1" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </button>
    </div>
</div>
<div class="container-fluid">
    <div class="container py-5">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="feature-box">
                    <i class="fa fa-truck"></i>
                    <h5>Free Standard Delivery</h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box">
                    <i class="fa fa-undo"></i>
                    <h5>Free Easy Returns</h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box">
                    <i class="fa fa-book"></i>
                    <h5>6 Million Books Available</h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="feature-box">
                    <i class="fa fa-percent"></i>
                    <h5>Special Discounts</h5>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5" style="background-color: #f2ede3;">
    <!-- Section Title -->
    <div class="container text-center">
        <h2 class="section-title">Our Featured Products</h2>
        <p class="mb-5">Explore our exclusive collection of products. Get them while they last!</p>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var product in randomProducts)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <a asp-area="Customer" asp-controller="Shop" asp-action="Index" style="text-decoration: none;">
                        <div class="card border-0 shadow-lg rounded-3 product-card position-relative">
                            <div class="category-label">
                                @product.Category.Name
                            </div>
                            <div id="productsliderinner" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3500">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="@product.ImageFeatured" class="d-block w-100 product-image" style="height: 350px; object-fit: cover;" alt="@product.Title" />
                                    </div>
                                    <div class="carousel-item">
                                        <img src="@product.ImageFirst" class="d-block w-100 product-image" style="height: 350px; object-fit: cover;" alt="@product.Title" />
                                    </div>
                                    <div class="carousel-item">
                                        <img src="@product.ImageSecond" class="d-block w-100 product-image" style="height: 350px; object-fit: cover;" alt="@product.Title" />
                                    </div>
                                </div>
                            </div>
                            <div class="card-body text-center p-4">
                                <h5 class="card-title text-dark mb-3 font-weight-bold" style="min-height: 70px;">@product.Title</h5>
                                <p class="card-text text-muted mb-3">by @product.Author.Title</p>
                                <p class="price">
                                    <span class="text-dark">Price:</span> &nbsp;
                                    <span class="text-muted"><strike>$@product.ListPrice.ToString("0.00")</strike></span> &nbsp;
                                    <span class="text-danger font-weight-bold h5"> $@product.Price100.ToString("0.00")</span>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
        <div class="text-center">
            <a class="btn btn-lg btn-custom" asp-area="Customer" asp-controller="Shop" asp-action="Index">View More Books</a>
        </div>
    </div>
</div>
<div class="container-fluid my-5">
    <img src="/Images/banner-6.jpg" class="img-fluid" alt="Popular Books">

</div>
<style>

    .feature-box {
        text-align: center;
        padding: 30px;
        background: #fff;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
    }

        .feature-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .feature-box i {
            font-size: 50px;
            color: #e94115;
            margin-bottom: 15px;
            transition: color 0.3s ease-in-out;
        }

        .feature-box:hover i {
            color: #111111;
        }
    /*************Product section*****************/

    /* General Layout */
    .product-card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        /* Card Hover Effect */
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

    /* Carousel Image Hover Effect */
    .product-image {
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05); /* Slight zoom effect on hover */
        }

    /* Price Styling */
    .price {
        font-size: 1.2rem;
        font-weight: bold;
        margin-top: 15px;
    }

        /* Price Text Styles */
        .price strike {
            color: #6c757d;
        }

        .price .text-danger {
            color: #e74c3c; /* Red for discounted price */
        }

    /* Carousel Fade Transition */
    .carousel-fade .carousel-item {
        opacity: 0;
        transition: opacity 0.5s ease;
    }

        .carousel-fade .carousel-item.active {
            opacity: 1;
        }

    /* Custom Category Label Positioning */
    .category-label {
        position: absolute;
        top: 20px;
        right: 10px;
        background-color: #e94115; /* Dark background for contrast */
        color: white;
        padding: 5px 10px;
        font-weight: bold;
        font-size: 1rem;
        transform: rotate(0deg);
        border-radius: 20px;
        transform-origin: top right;
        z-index: 10; /* Ensures it stays on top of the images */
    }

    /* Ensure the card has position-relative to position the category label correctly */
    .product-card {
        position: relative;
    }

        /* Card Hover Effect */
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    /* Product Image Hover Effect */
    .product-image {
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05); /* Slight zoom effect on hover */
        }

    /* Price Styling */
    .price {
        font-size: 1.2rem;
        font-weight: bold;
        margin-top: 15px;
    }

        .price strike {
            color: #6c757d;
        }

        .price .text-danger {
            color: #e74c3c; /* Red for discounted price */
        }
    /********** Button for product ************/

    .btn-custom {
        background: #e94115; /* Gradient background */
        color: white;
        font-weight: bold;
        border: 2px solid transparent;
        border-radius: 25px;
        padding: 12px 30px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.4s ease-in-out;
    }

        /* Button Hover Effects */
        .btn-custom:hover {
            background: linear-gradient(45deg, #38b9c5, #17a2b8); /* Reversed gradient on hover */
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow on hover */
            transform: translateY(-5px); /* Slight lift effect */
            color: #fff;
        }

        /* Button Active State */
        .btn-custom:active {
            transform: translateY(2px); /* Slight push-down effect when clicked */
            box-shadow: none; /* Remove shadow when button is pressed */
        }

        /* Focus State (when clicked or tabbed into) */
        .btn-custom:focus {
            outline: none; /* Remove focus outline */
            box-shadow: 0 0 0 4px rgba(0, 123, 255, 0.5); /* Add a glow effect when focused */
        }
</style>
