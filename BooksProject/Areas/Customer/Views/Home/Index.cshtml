<style>

    .feature-box {
        text-align: center;
        padding: 30px;
        background: #fff;
        border-radius: 10px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
    }

        .feature-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .feature-box i {
            font-size: 50px;
            color: #e94115;
            margin-bottom: 15px;
            transition: color 0.3s ease-in-out;
        }

        .feature-box:hover i {
            color: #111111;
        }
    /*************Product section*****************/

    /* General Layout */
    .product-card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        /* Card Hover Effect */
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

    /* Carousel Image Hover Effect */
    .product-image {
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05); /* Slight zoom effect on hover */
        }

    /* Price Styling */
    .price {
        font-size: 1.2rem;
        font-weight: bold;
        margin-top: 15px;
    }

        /* Price Text Styles */
        .price strike {
            color: #6c757d;
        }

        .price .text-danger {
            color: #e74c3c; /* Red for discounted price */
        }

    /* Carousel Fade Transition */
    .carousel-fade .carousel-item {
        opacity: 0;
        transition: opacity 0.5s ease;
    }

        .carousel-fade .carousel-item.active {
            opacity: 1;
        }

    /* Custom Category Label Positioning */
    .category-label {
        position: absolute;
        top: 20px;
        right: 10px;
        background-color: #e94115; /* Dark background for contrast */
        color: white;
        padding: 5px 10px;
        font-weight: bold;
        font-size: 1rem;
        transform: rotate(0deg);
        border-radius: 20px;
        transform-origin: top right;
        z-index: 10; /* Ensures it stays on top of the images */
    }

    /* Ensure the card has position-relative to position the category label correctly */
    .product-card {
        position: relative;
    }

        /* Card Hover Effect */
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    /* Product Image Hover Effect */
    .product-image {
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.05); /* Slight zoom effect on hover */
        }

    /* Price Styling */
    .price {
        font-size: 1.2rem;
        font-weight: bold;
        margin-top: 15px;
    }

        .price strike {
            color: #6c757d;
        }

        .price .text-danger {
            color: #e74c3c; /* Red for discounted price */
        }
    /********** Button for product ************/

    .btn-custom {
        background: #e94115; /* Gradient background */
        color: white;
        font-weight: bold;
        border: 2px solid transparent;
        border-radius: 25px;
        padding: 12px 30px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.4s ease-in-out;
    }

        /* Button Hover Effects */
        .btn-custom:hover {
            background: linear-gradient(45deg, #38b9c5, #17a2b8); /* Reversed gradient on hover */
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow on hover */
            transform: translateY(-5px); /* Slight lift effect */
            color: #fff;
        }

        /* Button Active State */
        .btn-custom:active {
            transform: translateY(2px); /* Slight push-down effect when clicked */
            box-shadow: none; /* Remove shadow when button is pressed */
        }

        /* Focus State (when clicked or tabbed into) */
        .btn-custom:focus {
            outline: none; /* Remove focus outline */
            box-shadow: 0 0 0 4px rgba(0, 123, 255, 0.5); /* Add a glow effect when focused */
        }





    /******************Blog***************/
    .subscribe-section {
        background-color: #e94115;
        padding: 40px 20px;
        border-radius: 10px;
    }

        .subscribe-section img {
            max-width: 200px;
            position: absolute;
            right: 20px;
            bottom: 0;
        }

    .subscribe-input {
        max-width: 400px;
