@{
    ViewData["Title"] = "Shopping Page";
}
<div class="container-fluid py-5" style="background-color: #fafafa;">
    <!-- Section Title -->
    <div class="container text-center mb-5">
        <h2 class="section-title text-dark">Our Featured Products</h2>
        <p class="lead text-muted section-description">Browse our carefully selected products. Get them before they are gone!</p>
    </div>

    <div class="container">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card border-0 shadow-sm rounded-lg product-card">
                        <div class="category-label">
                            @product.Category.Name
                        </div>
                        <div id="productsliderinner" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4500">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@product.ImageFeatured" class="d-block w-100 product-image" alt="@product.Title" />
                                </div>
                                <div class="carousel-item">
                                    <img src="@product.ImageFirst" class="d-block w-100 product-image" alt="@product.Title" />
                                </div>
                                <div class="carousel-item">
                                    <img src="@product.ImageSecond" class="d-block w-100 product-image" alt="@product.Title" />
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <h5 class="card-title text-dark mb-3 font-weight-bold" style="min-height: 70px;">@product.Title</h5>
                            <p class="card-text text-muted mb-3">by @product.Author.Title</p>
                            <p class="price">
                                Price: &nbsp;
                                <span class="text-muted"><strike>$@product.ListPrice.ToString("0.00")</strike></span> &nbsp;
                                <span class="text-danger font-weight-bold h5"> $@product.Price100.ToString("0.00")</span>
                            </p>
                        </div>
                        <div class="card-footer mt-3 p-3">
                            <div class="row">
                                <div class="col-6">
                                    <a asp-action="Details" class="btn btn-outline-dark form-control" asp-route-id="@product.Id">Details</a>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-primary mt-1 form-control" onclick="addToCart('@product.Title')">Add to Cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Background and General Styles */
    .container-fluid {
        background-color: #fafafa;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: bold;
    }

    .section-description {
        font-size: 1.1rem;
    }

    /* Product Card Styles */
    .product-card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .product-card .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 220px;
    }

    /* Carousel Image */
    .carousel-inner .carousel-item img {
        object-fit: cover;
        height: 300px;
        transition: transform 0.3s ease;
    }

    .carousel-inner .carousel-item img:hover {
        transform: scale(1.05);
    }

    /* Price Styling */
    .price {
        font-size: 1.2rem;
        margin-top: 10px;
    }

    .price strike {
        color: #6c757d;
    }

    .product-image {
        transition: transform 0.3s ease;
    }

    .product-image:hover {
        transform: scale(1.05);
    }

    /* Button Styles */
    .btn-outline-dark {
        border: 2px solid #343a40;
        color: #343a40;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-dark:hover {
        background-color: #343a40;
        color: #fff;
        border-color: #343a40;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .category-label {
        position: absolute;
        top: 20px;
        right: 10px;
        background-color: #e94115; /* Dark background for contrast */
        color: white;
        padding: 5px 10px;
        font-weight: bold;
        font-size: 1rem;
        transform: rotate(0deg);
        border-radius: 20px;
        transform-origin: top right;
        z-index: 10; /* Ensures it stays on top of the images */
    }
