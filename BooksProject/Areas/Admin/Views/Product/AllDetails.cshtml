        }

    /* Button Styles */
    .btn-outline-dark {
        border: 2px solid #343a40;
        color: #343a40;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline-dark:hover {
            background-color: #343a40;
            color: #fff;
