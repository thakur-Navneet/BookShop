@model BooksProject.Models.Support
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Support" : "New Support";
    var saveUpdate = Model.Id != 0 ? "Update" : "Save";
}
<div class="container mt-3">
    <form method="post">
        <div class="col-10 border-bottom">
            <h2 class="text-info">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Question"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Question" class="form-control" />
                    <span asp-validation-for="Question" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Answer"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Answer" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditandBackButton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackButton" />
                    }
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}