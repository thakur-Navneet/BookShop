@{
    ViewData["Title"] = "User Page";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">User List</h2>
        </div>
        <div class="col-3">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info form-control">
                <i class="fas fa-plus"></i>&nbsp; Add New User
            </a>
        </div>
    </div>
    <div class="rounded border p-2 m-2">
        <table id="tblData" class="table table-bordered table-hover">
            <thead class="bg-info">
                <tr>
                    <th class="text-light">Name</th>
                    <th class="text-light">Email</th>
                    <th class="text-light">Phone</th>
                    <th class="text-light">Company</th>
                    <th class="text-light">Role</th>
                    <th class="text-light">Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts  {
    <script src="~/js/User.js"></script>
}