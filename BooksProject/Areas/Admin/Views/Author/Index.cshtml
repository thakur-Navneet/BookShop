@{
    ViewData["Title"] = "Author Page";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Authors List</h2>
        </div>
        <div class="col-3">
            <a asp-action="Upsert" class="btn btn-info form-control">
                <i class="fas fa-plus"></i>&nbsp; Add New Author
            </a>
        </div>
    </div>
    <div class="rounded bordered">
        <table id="tblData" class="table table-striped table-bordered table-hover">
            <thead class="bg-info">
                <tr>
                    <th class="text-light">Edit</th>
                    <th class="text-light">Title</th>
                    <th class="text-light">Description</th>
                    <th class="text-light">Delete</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts  {
    <script src="~/js/Auhtor.js"></script>
}