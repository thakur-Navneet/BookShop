@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<section class="login-section">
    <div class="container my-3">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <form id="account" method="post" class="login-form">
                    <h2 class="text-center">Login</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                        <label class="form-check-label" for="Input.RememberMe">
                            Remember me
                        </label>
                    </div>

                    <div class="form-actions">
                        <button id="login-submit" type="submit" class="btn btn-login btn-lg btn-primary w-100">Log in</button>
                    </div>

                    <div class="additional-links">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    /* Login Section Style */
    .login-section {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f7f9fc;
    }

    /* Form container */
    .login-form {
        background-color: #fff;
        border-radius: 12px;
        padding: 2.5rem;
        width: 100%;
        max-width: 420px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        /* Hover effect on form */
        .login-form:hover {
            transform: translateY(-5px);
        }

        /* Heading */
        .login-form h2 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            color: #333;
        }

    /* Floating Input Style */
    .form-floating {
        margin-bottom: 1.5rem;
        position: relative;
    }

        .form-floating input {
            width: 100%;
            padding: 1.1rem;
            padding-left: 1.5rem;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-floating input:focus {
                border-color: #007bff;
                outline: none;
            }

        .form-floating label {
            position: absolute;
            top: 50%;
            left: 1.5rem;
            transform: translateY(-50%);
            font-size: 1rem;
            color: #aaa;
            transition: all 0.3s ease;
        }

        .form-floating input:focus ~ label,
        .form-floating input:not(:placeholder-shown) ~ label {
            top: -10px;
            font-size: 0.85rem;
            color: #007bff;
        }

    /* Checkbox styling */
    .form-check {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .form-check-input {
        height: 1.3rem;
        width: 1.3rem;
    }

    .form-check-label {
        margin-left: 0.6rem;
        font-size: 1rem;
        color: #555;
    }

    /* Button style */
    .btn-login {
        padding: 12px 0;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        font-size: 1.2rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-login {
        background-color: #007bff;
        color: #fff;
    }

        .btn-login:hover {
            background-color: #0056b3;
        }

    /* Additional Links Style */
    .additional-links {
        text-align: center;
        margin-top: 1.5rem;
    }

        .additional-links a {
            color: #007bff;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }

            .additional-links a:hover {
                color: #0056b3;
            }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
